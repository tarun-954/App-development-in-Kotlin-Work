<!-- res/drawable/button_background_with_shadow.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Shadow Layer -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#A06B19" /> <!-- Shadow color -->
            <corners android:radius="15dp" /> <!-- Rounded corners for the shadow -->
            <padding android:left="4dp" android:top="4dp" android:right="4dp" android:bottom="4dp" /> <!-- Shadow offset -->
        </shape>
    </item>

    <!-- Button Background Layer -->
    <item android:left="2dp" android:top="2dp" android:right="2dp" android:bottom="2dp">
        <shape android:shape="rectangle">
            <solid android:color="#A06B19" /> <!-- Button color -->
            <corners android:radius="15dp" /> <!-- Rounded corners for the button -->
        </shape>
    </item>

</layer-list>
