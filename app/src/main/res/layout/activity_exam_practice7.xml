<?xml version="1.0" encoding="utf-8"?>

<!--create a form in  which takes the inputs from the user like name age sex
address and then use the expicit intent to display the content to new activity
 use relative layout to create the program-->

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- Label for Name -->
    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name:"
        android:textSize="18sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <!-- Input for Name -->
    <EditText
        android:id="@+id/nameID"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:hint="Enter your name"
        android:layout_toEndOf="@id/name"
        android:layout_alignBaseline="@id/name"
        android:layout_marginStart="16dp" />

    <!-- Label for Age -->
    <TextView
        android:id="@+id/age"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Age:"
        android:textSize="18sp"
        android:layout_below="@id/name"
        android:layout_alignStart="@id/name"
        android:layout_marginTop="16dp" />

    <!-- Input for Age -->
    <EditText
        android:id="@+id/ageID"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:hint="Enter your age"
        android:layout_toEndOf="@id/age"
        android:layout_alignBaseline="@id/age"
        android:layout_marginStart="16dp" />

    <!-- Label for Sex -->
    <TextView
        android:id="@+id/sex"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sex:"
        android:textSize="18sp"
        android:layout_below="@id/age"
        android:layout_alignStart="@id/age"
        android:layout_marginTop="16dp" />

    <!-- Input for Sex -->
    <EditText
        android:id="@+id/sexID"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:hint="Enter your sex"
        android:layout_toEndOf="@id/sex"
        android:layout_alignBaseline="@id/sex"
        android:layout_marginStart="16dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/address"
        android:layout_below="@+id/sex"
        android:layout_marginTop="10dp"
        android:textSize="16dp"
        android:text="Address:"
        >


    </TextView>
<EditText
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:id="@+id/addressID"
    android:layout_alignBaseline="@+id/address"
    android:layout_toRightOf="@+id/address"
    android:hint="Enter your address">

</EditText>
    <!-- Submit Button -->
    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:text="Send Data"
        android:layout_below="@id/addressID"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp" />

</RelativeLayout>
