<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"

    >
    <Button
        android:layout_marginTop="200dp"
        android:layout_centerHorizontal="true"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="dialer button"
        android:id="@+id/dialerbutton"
        android:layout_alignParentTop="true"
        android:layout_centerVertical="true">

    </Button>

    <Button
        android:id="@+id/urlbutton"
        android:layout_width="200dp"
        android:layout_centerHorizontal="true"

        android:layout_height="50dp"
        android:text="Url button"
        android:layout_below="@+id/dialerbutton"

        >

    </Button>

    <Button
        android:id="@+id/senddatabutton"
        android:layout_centerHorizontal="true"

        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="send data button"
        android:layout_below="@+id/urlbutton"


        >

    </Button>

    <Button
        android:layout_centerHorizontal="true"
        android:id="@+id/locationbutton"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_below="@+id/senddatabutton"
        android:text="location button"
        >

    </Button>


</RelativeLayout>