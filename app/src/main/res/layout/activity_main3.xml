<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity2"
    android:background="#063970">


    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="270dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/shoppingback"
        android:layout_marginTop="50sp"/>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="203dp"
        android:layout_height="103dp"
        android:fontFamily="@font/qwitchergrypenregular"
        android:padding="0sp"

        android:text="@string/shopping"

        android:textAlignment="center"
        android:textColor="#eeeee4"
        android:textSize="90sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView3" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:text="@string/the_store_of_your_dreams_buy_latest_cloths_here"
android:textAlignment="center"
android:textSize="16sp"
        android:textColor="#eeeee4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.513"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
       />

    <Button
        android:id="@+id/start_to_signup"
        android:layout_width="280dp"
        android:layout_height="54dp"
        android:layout_marginTop="144dp"
android:background="@drawable/rounded_button"
android:padding="0sp"
android:textColor="#3E3D3D"
        android:fontFamily="sans-serif-condensed-light"
        android:text="@string/start_shopping"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="332dp"
        android:layout_height="35dp"
        android:layout_marginTop="8dp"
        android:text="@string/by_clicking_on_start_you_agree_to_all_the_terms_and_conditions"
        android:textAlignment="center"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/start_to_signup" />


</androidx.constraintlayout.widget.ConstraintLayout>